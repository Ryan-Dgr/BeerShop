@model BeerShop.ViewModels.BeerSearchByAlcoholVM

@{
    ViewData["Title"] = "GetBeersByAlcohol";
}

<h1>GetBeersByAlcohol</h1>

<h4>BeerSearchByAlcoholVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetBeersByAlcohol">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AlcoholPercentage" class="control-label"></label>
                <input asp-for="AlcoholPercentage" class="form-control" />
                <span asp-validation-for="AlcoholPercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Naam
                </th>
                <th>
                    Brouwernaam
                </th>
                <th>
                    Soort
                </th>
                <th>
                    Alcohol
                </th>
                <th>
                    Image
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Beers!)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Naam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brouwernaam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Soortnaam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Alcohol)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else  // Beers is een lege lijst
{
    <p>Geen bieren gevonden voor het opgegeven alcoholpercentage.</p>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}