@model IEnumerable<BeerShop.ViewModels.BeerVM>
@using System.Linq

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brouwernaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soortnaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alcohol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@{ 
    var items = Model ?? Enumerable.Empty<BeerShop.ViewModels.BeerVM>(); 
}
@if (!items.Any())
{
    <tr>
        <td colspan="6">No beers found.</td>
    </tr>
}
else
{
    foreach (var item in items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brouwernaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soortnaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alcohol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Biernr }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Biernr }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Biernr })
                    </td>

        </tr>
    }
}
    </tbody>
</table>
